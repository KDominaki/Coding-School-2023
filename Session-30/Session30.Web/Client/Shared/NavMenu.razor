<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Main Menu</a>
        <button class="btn btn-success" @onclick="Yest">Log-In</button>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

@if(Show == true && Manager == false && Cashier == false && Stuff == false)
{

     <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <button class="btn btn-success" @onclick="IamManager">Manager</button>
        <button class="btn btn-success" @onclick="IamCashier">Cashier</button>
        <button class="btn btn-success" @onclick="IamStuff">Stuff</button>
        </div>  
}
else if(Manager == true)
{
    <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="customerlist">
                    <span class="oi oi-people" aria-hidden="true"></span> Customers
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="itemlist">
                    <span class="oi oi-spreadsheet" aria-hidden="true"></span> Items
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="employeelist">
                    <span class="oi oi-briefcase" aria-hidden="true"></span> Employees
                </NavLink>          
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="ledger">
                    <span class="oi oi-clipboard" aria-hidden="true"></span> Ledger
                </NavLink>
            </div>
        </nav>
    </div>
}
else if (Cashier == true)
{
    <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="customerlist">
                    <span class="oi oi-people" aria-hidden="true"></span> Customers
                </NavLink>
            </div>
        </nav>
    </div>
}
else if(Stuff == true)
{
   <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="itemlist">
                    <span class="oi oi-people" aria-hidden="true"></span> Items
                </NavLink>
            </div>
        </nav>
    </div>   
}



@code {
    private bool collapseNavMenu = true;
    private bool Show = false;
    private bool Manager = false;
    private bool Cashier = false;
    private bool Stuff = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void Yest()
    {
        Show = true;
        Manager = false;
        Cashier = false;
        Stuff = false;
    }

    private void IamManager()
    {
        Manager = true;

    }

    private void IamCashier()
    {
        Cashier = true;
    }

    private void IamStuff()
    {
        Stuff = true;
    }
}
